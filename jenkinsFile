pipeline {
    agent any
    tools {
        nodejs 'node-20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git 'https://github.com/PaulLandaeta/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'yarn install'
                sh 'yarn add cypress --dev'
            }
        }
        stage('Build') {
            steps {
                sh 'yarn build'
            }
        }
        stage('Check package.json') {
            steps {
                sh 'cat package.json'
        }
        }

        stage('Run Cypress Tests') {
            steps {
                sh 'yarn cypress run'
            }
        }
    }
}
